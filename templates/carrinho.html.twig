{% extends 'base.html.twig' %}

{% block content %}

    <div class="container-sm">
        <div class="mt-3">
            <a href="{{ path('produto') }}" class="text-decoration-none"> Página Incial </a>
        </div>

            <div class="card-title">
                <h4 class="card-title"> Carrinho de Compras </h4>        
            </div>

            <div class="mx-auto">
            {% for bikes in carrinho %}
                <div>
                    {% if bikes.image %} <img src="/images/{{ bikes.image }}" alt="" width="10%" height="10%"> </a> {% endif %}
                </div>
                <div>
                    <h6> Cód. {{ bikes.id }} </h6>
                </div>
                <div>
                    <h5 class=""> {{ bikes.nome }} </h5>
                </div>
                    <div>
                        <small class="text-muted text-center"> Valor: </small> R$ {{ bikes.preco | number_format(2) }}
                    </div>
            </div>

            <div>
                <form method="post">
                    <button class="btn btn-danger" style="width: 10%; font-size: 0.8em;"> Remover </button>
                    <input type="hidden" name="id" value="{{ bikes.id }}">
                </form>
            </div>
        
            {% endfor %}
            <div></div>
                <div class="mt-3"> Total </div>
                <div class="total"> R$ {{ total | number_format(2) }} </div>

                <form action="checkout" class="">
                    <button class="btn btn-primary mt-3"> Continuar para checkout </button>
                </form>
        
                <a href="{{ path('produto')}}" class="text-decoration-none" style="color: inherit;">  <button class="btn btn-outline-warning mt-3 btn-sm"> Continuar comprando </button> </a>

    </div>


{% endblock %}