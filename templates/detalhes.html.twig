{% extends 'base.html.twig' %}

{% block content %}

    <div class="container-sm">
        <div class="mt-3">
            <a href="{{ path('produto') }}" class="text-decoration-none"> Página Incial </a>
        </div>
        <div class="mx-auto">
            {% if bike.image %} <a href="/produto/{{ bike.id }}"> <img src="/images/{{ bike.image }}" alt=""> </a> {% endif %}
            <h6> <a href="/produto/{{ bike.id }}" class="link-info text-decoration-none"> Cód. {{ bike.id }} </a> </h6>
            <h5 class=""> <a href="/produto/{{ bike.id }}" class="text-decoration-none"> {{ bike.nome }} </a></h5>

            <small class="text-muted text-center"> Valor: </small> R$ {{ bike.preco }}

            <form method="post">
                {% if noCarrinho %}
                    <button disabled="btn" class="btn btn-outline-secondary btn-sm"> Adicionado ao carrinho </button>
                {% else %}
                    <button class="btn btn-success btn-sm"> Adicionar ao carrinho </button>
                {% endif %}
            </form>

            <div class="rounded border border-light mt-3 p-3 shadow-sm p-3 mb-5 bg-body">
                {% if bike.descricao %} <p> {{ bike.descricao }} </p> {% endif %}
            </div>

        </div>
    </div>

    <div class="clearfix"></div>

{% endblock %}